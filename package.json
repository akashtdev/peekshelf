{
	"name": "peekshelf",
	"description": "A beautiful bookmark manager extension",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"prepare": "lefthook install",
		"postinstall": "wxt prepare",
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"clean": "rm -rf node_modules bun.lockb bun.lock .wxt dist .output .turbo .cache",
		"clean:cache": "bun pm cache rm"
	},
	"dependencies": {
		"@base-ui-components/react": "^1.0.0-rc.0",
		"@hugeicons/core-free-icons": "^3.1.1",
		"@hugeicons/react": "^1.1.4",
		"@tailwindcss/vite": "^4.1.18",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@wxt-dev/auto-icons": "^1.1.0",
		"@wxt-dev/module-react": "^1.1.5",
		"lefthook": "^2.0.16",
		"typescript": "^5.9.3",
		"wxt": "^0.20.6"
	}
}
